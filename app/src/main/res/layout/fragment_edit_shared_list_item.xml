<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elad.liskyproject.controller.main.shared_list.EditSharedListItemFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/edit_shared_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Item Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_shared_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_shared_list_item_name" />

        <Button
            android:id="@+id/edit_shared_list_item_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_shared_list_item_image_view" />

        <Button
            android:id="@+id/edit_shared_list_item_delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="42dp"
            android:text="Delete Item"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintEnd_toStartOf="@+id/edit_shared_list_item_edit_button"
            app:layout_constraintStart_toEndOf="@+id/edit_shared_list_item_cancel_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_shared_list_item_edit_button" />

        <Button
            android:id="@+id/edit_shared_list_item_edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_shared_list_item_image_view" />

        <ImageView
            android:id="@+id/edit_shared_list_item_image_view"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_shared_list_item_description" />

        <ProgressBar
            android:id="@+id/edit_shared_list_item_spinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/edit_shared_list_item_image_view"
            app:layout_constraintEnd_toEndOf="@+id/edit_shared_list_item_image_view"
            app:layout_constraintStart_toStartOf="@+id/edit_shared_list_item_image_view"
            app:layout_constraintTop_toTopOf="@+id/edit_shared_list_item_image_view" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
